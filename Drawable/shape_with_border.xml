    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
